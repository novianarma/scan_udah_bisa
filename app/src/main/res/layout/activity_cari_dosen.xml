<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    tools:context=".CariDosenActivity"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btback"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="@drawable/btback"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:onClick="btback"/>

            <ImageView
                android:id="@+id/imagelogo"
                android:layout_width="142dp"
                android:layout_height="132dp"
                app:srcCompat="@drawable/caridosen"
                android:layout_alignBottom="@id/btlogout"
                android:layout_marginLeft="190dp"
                android:layout_marginBottom="-115dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="140dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/caridosen"
                        android:layout_width="270dp"
                        android:layout_height="35dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/searchbox"
                        android:hint="  Ketik nama dosen disini..."
                        android:inputType="textPersonName" />
                    <Button
                        android:id="@+id/btsearch1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@android:drawable/ic_search_category_default" />
                </LinearLayout>

        <ListView
            android:id="@+id/listdosen"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/kotak"></ListView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>